<MudDialog>
    <DialogContent>
        <EditForm Model="@_formModel" OnValidSubmit="FormSubmit">
            <DataAnnotationsValidator/>
            <ValidationSummary/>
            <MudCard>
                <MudCardContent>
                    <MudTextField Label="Project Name" @bind-Value="@_formModel.Name" For="@(() => _formModel.Name)"/>  
                    <MudTextField Label="Project Description" @bind-Value="@_formModel.Description" For="@(() => _formModel.Description)"/>
                </MudCardContent>
                <MudCardActions>
                    <MudButton OnClick="Cancel">Cancel</MudButton>
                    <MudButton Color="Color.Primary" ButtonType="ButtonType.Submit" Variant="Variant.Filled">Save</MudButton>
                </MudCardActions>
            </MudCard>
        </EditForm>
    </DialogContent>
</MudDialog>